<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.Notifications_Suggestion">
    <TextView
        android:id="@+id/Tv_Problem_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="问题描述"
        android:textSize="25dp"
        android:textColor="#272727"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        ></TextView>
    <EditText
        android:id="@+id/Et_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/Tv_Problem_description"
        android:background="@drawable/et_radius"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="请输入…"
        android:textColorHint="#9D9D9D"
        android:gravity="top"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:maxLength="100"
        android:lineSpacingMultiplier="1"
        android:lines="8"
        android:paddingTop="10dp"
        android:letterSpacing="0.05"

        ></EditText>
        <Button
            android:id="@+id/Bt_ok_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确认提交"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textSize="18dp"
            android:background="@drawable/ok_radius"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            ></Button>
        <TextView
            android:id="@+id/Tv_thanks"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="您的反馈就是我们更新的动力！"
            android:layout_above="@id/Bt_ok_send"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            ></TextView>
</RelativeLayout>